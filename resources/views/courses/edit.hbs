<div class="mt-4 px-4 ">
    <h3>Sửa khóa học</h3>

    <form method="POST" action="/course/{{courses._id}}?_method=PUT">
        <div class="mb-3 mt-4">
            <label for="name">Name</label>
            <input type="text" class="form-control" value="{{courses.name}}" id="name" name="name">
        </div>
        <div class="mb-3">
            <label for="description">Description</label>
            <input type="text" class="form-control" value="{{courses.description}}" id="description" name="description">
        </div>
        <div class="mb-3">
            <label for="videoId">video ID</label>
            <input type="text" class="form-control" value="{{courses.videoId}}" id="videoId" name="videoId">
        </div>
        <div class="mb-3">
            <label for="image">Image</label>
            <input type="text" class="form-control" value="{{courses.image}}" id="image" name="image">
        </div>
        <div class="mb-3">
            <label for="level">Level</label>
            <input type="text" class="form-control" value="{{courses.level}}" id="level" name="level">
        </div>
        <button type="submit" class="btn btn-primary">Lưu lạ<i></i></button>
    </form>
</div>